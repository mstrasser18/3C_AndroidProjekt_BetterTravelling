<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".RightFragment">

        <TextView
            android:id="@+id/info_sight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_sight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/latlon_sight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_sight"
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/find_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="5sp"
            android:text="Events in der NÃ¤he anzeigen"
            android:textAllCaps="false"
            android:visibility="invisible" />

        <Button
            android:id="@+id/show_on_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="10sp"
            android:text="Auf Karte anzeigen"
            android:textAllCaps="false"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>